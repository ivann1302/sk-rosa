# Включаем mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Если запрашивается файл или директория - отдаем как есть
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Если запрашивается URL без расширения и есть соответствующий .html файл
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^(.*)$ $1.html [L]

    # Если файл или директория не существует - перенаправляем на 404
    # Проверяем, что это не статические ресурсы (assets, scripts и т.д.)
    RewriteCond %{REQUEST_URI} !^/(assets|scripts)/ [NC]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.html !-f
    RewriteRule ^(.*)$ /404.html [L]

    # Редирект с .html на без .html (опционально, для чистых URL)
    RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
    RewriteRule ^ /%1 [NC,L,R=301]
</IfModule>

# Обработка 404 ошибок
ErrorDocument 404 /404.html

# Защита .env файла
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

# === SECURITY HEADERS ===
# Заголовки безопасности для защиты от различных атак
<IfModule mod_headers.c>
    # X-XSS-Protection: Защита от XSS атак
    # "1; mode=block" - включает встроенную защиту браузера и блокирует страницу при обнаружении XSS
    Header set X-XSS-Protection "1; mode=block"
    
    # X-Frame-Options: Защита от clickjacking (встраивание страницы в iframe)
    # "SAMEORIGIN" - разрешает встраивание только с того же домена
    # Можно использовать "DENY" для полного запрета встраивания
    Header set X-Frame-Options "SAMEORIGIN"
    
    # X-Content-Type-Options: Запрещает браузеру "угадывать" тип контента
    # "nosniff" - браузер будет использовать только указанный Content-Type
    # Защищает от MIME-sniffing атак (например, загрузка JS как изображения)
    Header set X-Content-Type-Options "nosniff"
    
    # Referrer-Policy: Контролирует, какую информацию о реферере отправлять
    # "strict-origin-when-cross-origin" - полный URL только для того же домена,
    # для других доменов только origin (без пути)
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Работает только для HTTPS соединений
    # "max-age=31536000" - 1 год
    # "includeSubDomains" - применяется ко всем поддоменам
    # "preload" - можно добавить в список предзагрузки HSTS
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains" env=HTTPS
    
    # Permissions-Policy: Контролирует доступ к API браузера
    # Отключает неиспользуемые функции для повышения безопасности
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>
# === КОНЕЦ SECURITY HEADERS ===

# Кеширование статических файлов
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

