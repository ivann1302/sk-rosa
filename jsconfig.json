{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@scripts/*": ["src/scripts/*"],
      "@core/*": ["src/scripts/core/*"],
      "@modules/*": ["src/scripts/modules/*"],
      "@features/*": ["src/scripts/features/*"],
      "@utils/*": ["src/scripts/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"]
    },
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "preserve",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public_html"]
}

